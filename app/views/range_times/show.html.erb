
<div class="col-md-12 col-sm-12" id="main">

  <h1>Tổng tiêu : <%= @tongtien %></h1>
  <p> Khoảng thời gian: <span class="label label-success"><%= @range_time.start_time if @range_time %> - <%= @range_time.end_time if @range_time %></span></p>
  <h3>Trung bình: <span class="label label-success"><%= @tien_tb %> K</span></h3>
  <table>
    <tr>
      <th>Tên</th>
      <th>Tổng tiền</th>
      <th>Nhận lại</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
          <% amount = user.amount(@range_time.id) %>
          <td><%= user.name %></td>
          <td><%= amount %></td>
          <td><%= amount - @tien_tb %></td>
      </tr>
    <% end %>
  </table>
</div>
