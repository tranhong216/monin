<% provide :title, t(".title") %>
<h1><%= t ".heading" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages", users: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :sex %>
      <%= f.select :sex, sex_choice %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t(".btn_confirm") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t(".t_create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
