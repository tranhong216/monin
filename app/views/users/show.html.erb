<% provide :title, @user.profile.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.profile.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats", user: @user %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if logged_in? %>
      <%= render "follow_form", user: @user, relationship: @relationship%>
    <% end %>
    <% if @user.microposts.any? %>
      <h3><%= t".count_microposts", count: @user.microposts.count %></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
